						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"Complete project\",\n  \"description\": \"Finish the todo app project\",\n  \"status\": \"pending\",\n  \"priority\": \"high\",\n  \"categoryId\": \"CATEGORY_ID_HERE\",\n  \"startDate\": \"2024-01-01T00:00:00.000Z\",\n  \"dueDate\": \"2024-12-31T23:59:59.000Z\"\n}"
